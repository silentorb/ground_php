{
  "tables": {
    "location": {
      "name": "location"
    },
    "node": {
      "name": "node",
      "indexes": {
        "vid": {
          "unique": true,
          "fields": [
            "vid"
          ]
        }
      }
    },
    "user": {
      "properties": {
        "email": {
          "name": "mail"
        },
        "password": {
          "name": "pass"
        }
      }
    },
    "role": {
      "name": "role"
    },
    "roles_users": {
      "name": "users_roles",
      "primary_keys": [ "uid", "rid" ],
      "properties": {
        "uid": {
          "type": "reference",
          "trellis": "user"
        },
        "rid": {
          "type": "reference",
          "trellis": "role"
        }
      }
    }
  },
  "trellises": {
    "file": {
      "primary_key": "fid",
      "properties": {
        "fid": {
          "type": "int"
        },
        "uid": {
          "type": "int"
        },
        "filename": {
          "type": "string"
        },
        "filepath": {
          "type": "string"
        },
        "filemime": {
          "type": "string"
        },
        "filesize": {
          "type": "int"
        },
        "status": {
          "type": "int"
        },
        "timestamp": {
          "type": "datetime"
        }
      }
    },
    "location": {
      "primary_key": "lid",
      "properties": {
        "lid": {
          "type": "int"
        },
        "name": {
          "type": "string"
        },
        "street": {
          "type": "string"
        },
        "additional": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "province": {
          "type": "string"
        },
        "postal_code": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "latitude": {
          "type": "decimal"
        },
        "longitude": {
          "type": "decimal"
        },
        "source": {
          "type": "bool"
        },
        "is_primary": {
          "type": "bool"
        }
      }
    },
    "node_revision": {
      "primary_key": "vid",
      "properties": {
        "nid": {
          "type": "int"
        },
        "vid": {
          "type": "int"
        },
        "uid": {
          "type": "int"
        },
        "title": {
          "type": "string"
        },
        "body": {
          "type": "text"
        },
        "teaser": {
          "type": "text"
        },
        "log": {
          "type": "text"
        },
        "timestamp": {
          "type": "modified"
        },
        "format": {
          "type": "int"
        }
      }
    },
    "node": {
      "primary_key": "nid",
      "properties": {
        "nid": {
          "type": "int"
        },
        "vid": {
          "type": "int"
        },
        "type": {
          "type": "string",
          "insert": "trellis"
        },
        "language": {
          "type": "string",
          "default": ""
        },
        "title": {
          "type": "string"
        },
        "uid": {
          "type": "int",
          "insert": "author"
        },
        "status": {
          "type": "int",
          "default": 1
        },
        "created": {
          "type": "created"
        },
        "changed": {
          "type": "modified"
        },
        "comment": {
          "type": "int",
          "default": 0
        },
        "promote": {
          "type": "int",
          "default": 0
        },
        "moderate": {
          "type": "int",
          "default": 0
        },
        "sticky": {
          "type": "int",
          "default": 0
        },
        "tnid": {
          "type": "int",
          "default": 0
        },
        "translate": {
          "type": "int",
          "default": 0
        }
      }
    },
    "user": {
      "primary_key": "uid",
      "properties": {
        "uid": {
          "type": "int"
        },
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "theme": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        },
        "signature_format": {
          "type": "int"
        },
        "created": {
          "type": "datetime"
        },
        "access": {
          "type": "datetime"
        },
        "login": {
          "type": "datetime"
        },
        "status": {
          "type": "bool"
        },
        "timezone": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "picture": {
          "type": "string"
        },
        "init": {
          "type": "string"
        },
        "data": {
          "type": "text"
        },
        "roles": {
          "type": "list",
          "trellis": "role"
        }
      }
    },
    "object": {
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string"
        },
        "author": {
          "type": "reference",
          "trellis": "user",
          "insert": "author"
        },
        "type": {
          "type": "string",
          "readonly": true,
          "insert": "trellis"
        },
        "created": {
          "type": "created",
          "readonly": true
        },
        "modified": {
          "type": "modified",
          "readonly": true
        }
      }
    },
    "role": {
      "primary_key": "rid",
      "properties": {
        "rid": {
          "type": "int"
        },
        "name": {
          "type": "string"
        },
        "users": {
          "type": "list",
          "trellis": "user"
        }
      }
    },    
    "session": {
      "primary_key": "sid",
      "properties": {
        "uid": {
          "type": "int"
        },
        "sid": {
          "type": "string"
        },
        "hostname": {
          "type": "string"
        },
        "timestamp": {
          "type": "int"
        },
        "cache": {
          "type": "int"
        },
        "session": {
          "type": "text"
        }
      }
    }
  }
}